<Window x:Class="Nim.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nim"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="exitButton" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="553,335,0,0" FontSize="24" FontFamily="Times New Roman" Click="exitButton_Click"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="247,335,0,0" FontSize="24" FontFamily="Times New Roman" Click="startButton_Click"/>
        <TextBox x:Name="playerTwoName" HorizontalAlignment="Left" Height="43" Margin="333,284,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146" FontFamily="Times New Roman" FontSize="24"/>
        <TextBox x:Name="playerOneName" HorizontalAlignment="Left" Height="47" Margin="333,146,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146" FontFamily="Times New Roman" FontSize="24"/>
        <RadioButton Content="VS AI" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,198,0,0" FontFamily="Times New Roman" FontSize="24" GroupName="Opponent"/>
        <RadioButton Content="VS Human" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,230,0,0" FontFamily="Times New Roman" FontSize="24" GroupName="Opponent"/>
        <RadioButton Content="Easy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,177,0,0" FontFamily="Times New Roman" FontSize="24" GroupName="Difficulty"/>
        <RadioButton Content="Medium" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,209,0,0" FontFamily="Times New Roman" FontSize="24" GroupName="Difficulty"/>
        <RadioButton Content="Hard" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,241,0,0" FontFamily="Times New Roman" FontSize="24" GroupName="Difficulty"/>

    </Grid>
</Window>
